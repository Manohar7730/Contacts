<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/d2d263dc81.js" crossorigin="anonymous"></script>
    <title>
        <%= title %>
    </title>
</head>
<body>
    <section>
        <ul>
            <% for(i of contact_list) {%>
                <li>
                    <p><%= i.name %></p>
                    <p><%= i.phone %></p>
                    <a href="/delete_contact/<%= i._id %>"><i class="fa-solid fa-xmark"></i></a>
                </li>
            <%}%>
        </ul>
        <form action="/create_contact" method="post">
            <input type="text" name="name" placeholder="Enter Name" required>
            <input type="number" name="phone" placeholder="Enter Phone" required>
            <input type="submit" value="Add">
        </form>
    </section>
</body>
</html>